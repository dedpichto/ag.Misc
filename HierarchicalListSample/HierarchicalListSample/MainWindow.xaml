<Window x:Class="HierarchicalListSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HierarchicalListSample"
        mc:Ignorable="d"
        Title="TreeListView Example" Height="600" Width="900">

    <Window.Resources>
        <local:LevelToIndentConverter x:Key="LevelToIndentConverter" IndentSize="25"/>
        <local:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <!-- Style for the expander button -->
        <Style x:Key="ExpanderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <local:TreeListViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Hierarchical ListView with TreeView Features" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <ListView Grid.Row="1" 
                  ItemsSource="{Binding FlattenedNodes}"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                    <!-- Add InputBinding for double-click -->
                    <Setter Property="local:DoubleClickBehavior.Command" 
                            Value="{Binding DataContext.ToggleExpandCommand,                         RelativeSource={RelativeSource AncestorType=ListView}}"/>
                    <Setter Property="local:DoubleClickBehavior.CommandParameter" 
                            Value="{Binding}"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <!-- Name Column with Expander and Checkbox -->
                    <GridViewColumn Header="Name" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                          Margin="{Binding Level, Converter={StaticResource LevelToIndentConverter}}">

                                    <!-- Expander Button -->
                                    <Button Content="{Binding ExpanderIcon}"
                                            Command="{Binding DataContext.ToggleExpandCommand, 
                                                            RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ExpanderButtonStyle}"
                                            Visibility="{Binding HasChildren, 
                                                               Converter={StaticResource BoolToVisConverter}}"
                                            Width="16"
                                            Height="16"/>

                                    <!-- Spacer for nodes without children -->
                                    <Border Width="16" 
                                            Visibility="{Binding HasChildren, 
                                                               Converter={StaticResource BoolToVisConverter}, 
                                                               ConverterParameter=Inverted}"/>

                                    <!-- Checkbox -->
                                    <CheckBox IsChecked="{Binding IsChecked}" 
                                            Margin="5,0"
                                            VerticalAlignment="Center"/>

                                    <!-- Icon (optional) -->
                                    <Image Source="{Binding ImagePath}" 
                                           Width="16" 
                                           Height="16" 
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Style.Triggers>
                                                    <Trigger Property="Source" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>

                                    <!-- Name Text -->
                                    <TextBlock Text="{Binding Name}" 
                                             VerticalAlignment="Center"
                                             FontWeight="{Binding HasChildren, 
                                                                Converter={StaticResource BoolToFontWeightConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Description Column -->
                    <GridViewColumn Header="Description" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" 
                                         TextTrimming="CharacterEllipsis"
                                         ToolTip="{Binding Description}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Level Column (for demonstration) -->
                    <GridViewColumn Header="Level" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Level}" 
                                         HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Parent Name Column -->
                    <GridViewColumn Header="Parent" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Parent.Name}" 
                                         FontStyle="Italic"
                                         Foreground="#666"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
